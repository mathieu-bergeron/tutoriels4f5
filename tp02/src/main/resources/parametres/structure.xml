<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import tp01_corrige_javafx.vues.composants.CaseAjustable?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" styleClass="conteneurPrincipal" fx:controller="tp01_corrige_javafx.vues.VueParametresFX">

	<VBox styleClass="conteneurVertical" VBox.vgrow="ALWAYS">
		<VBox styleClass="grosEspace" VBox.vgrow="ALWAYS"/>
		<HBox alignment="center">
			<Text styleClass="texteQuiCommence" textAlignment="CENTER" text="%quiCommence"/>
		</HBox>
		<VBox styleClass="petitEspace" VBox.vgrow="ALWAYS"/>
		<HBox styleClass="conteneurQuiCommence" VBox.vgrow="ALWAYS">

				<VBox styleClass="conteneurMarque" alignment="center" HBox.hgrow="ALWAYS">
					<CaseAjustable styleClass="marque" fx:id="caseX" VBox.vgrow="ALWAYS"/>
					<VBox styleClass="petitEspace" VBox.vgrow="ALWAYS"/>
					<CheckBox fx:id="checkX"/>
				</VBox>

				<VBox styleClass="petitEspace" VBox.vgrow="ALWAYS"/>

				<VBox styleClass="conteneurMarque" alignment="center" HBox.hgrow="ALWAYS">
					<CaseAjustable styleClass="marque" fx:id="caseO" VBox.vgrow="ALWAYS"/>
					<VBox styleClass="petitEspace" VBox.vgrow="ALWAYS" />
					<CheckBox fx:id="checkO"/>
				</VBox>

		</HBox>
	</VBox>

	<HBox styleClass="grosEspace" VBox.vgrow="always"/>

	<HBox styleClass="conteneurBouton" alignment="center">
		<Button styleClass="bouton" text="%ok" fx:id="boutonOk"/>
	</HBox>

</VBox>
